{
  "include": [
    "src/lib"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "downlevelIteration": true,
    "lib": [
      "es2020.string"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  }
}
